<%= breadcrumbs(
  link_to('Lenders', lenders_path),
  h(@lender.name)
) %>

<div class="page-header">
  <h1>Lender Experts</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th>Email</th>
      <th class="center">Disabled</th>
      <th class="center">Locked</th>
    </tr>
  </thead>
  <tbody>
    <% @experts.each do |expert| %>
      <tr>
        <td><%= expert.user.name %></td>
        <td><%= expert.user.username %></td>
        <td><%= expert.user.email %></td>
        <td class="center"><%=friendly_boolean expert.user.disabled %></td>
        <td class="center"><%=friendly_boolean expert.user.locked? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

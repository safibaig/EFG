<%= breadcrumbs(
  link_to('User Management', lender_lender_users_path(@user.lender))
) %>

<div class="page-header">
  <h1>User: <%= @user.name %></h1>
</div>

<dl>
  <dt>Username</dt>
  <dd><%= @user.username %></dd>
  <dt>Email</dt>
  <dd><%= @user.email %></dd>
  <dt>Locked</dt>
  <dd><%=friendly_boolean @user.locked? %></dd>
</dl>

<%= render 'user_management/user_state_change_buttons', user: @user %>

<div class="actions">
  <%= link_to "Back to Lender Users", lender_lender_users_url(@user.lender), class: 'btn' %>
</div>

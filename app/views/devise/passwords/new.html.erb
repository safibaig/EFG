<div class="page-header">
  <h1>Reset Your Password</h1>
</div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
  <%= f.error_notification %>

<div class="alert alert-warning" style="color: black;">
    <p>
      If you haven't changed your password since 8pm on Wednesday 6th March you must enter your username below to request a password reset.
    </p>
    <p>
      From 6th March we have changed the Enterprise Finance Guarantee password policy. You must now change your password at least once every 90 days.
    </p>
  </div>

  <%= f.input :username, required: true %>

  <div class="form-actions">
    <%= f.button :submit, "Send Reset Instructions", class: 'btn btn-primary', data: { 'disable-with' => 'Submitting...' } %>
  </div>
<% end %>
